  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@types/luxon": "^3.7.1",
    "@types/node": "^22.18.10",
    "@vitalyostanin/eslint-prefer-de-morgan-law": "^1.0.2",
    "eslint": "^9.37.0",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.46.0"
  }
