    "start": "node dist/index.js",
    "dev:watch": "tsc -p tsconfig.json --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "sentry",
    "issues",
    "observability",
    "claude"
