  "bin": {
    "sentry-mcp": "dist/index.js"
  },
  "homepage": "https://github.com/VitalyOstanin/sentry-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/VitalyOstanin/sentry-mcp.git"
  },
